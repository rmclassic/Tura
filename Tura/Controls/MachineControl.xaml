<UserControl x:Class="Tura.MachineControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tura"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="200" Width="100" Height="75">
    <Grid Background="LightGray">
        <Rectangle Stroke="Black" StrokeThickness="2"/>
        <TextBlock Name="MachineName" Text="New Machine" FontSize="12" FontWeight="Black" VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </Grid>
</UserControl>
