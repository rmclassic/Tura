        <Rectangle Stroke="Black" StrokeThickness="2"/>
        
        <TextBlock Name="MachineName" Text="New Turing Machine" FontSize="12" FontWeight="Black" VerticalAlignment="Center" HorizontalAlignment="Center"/>
