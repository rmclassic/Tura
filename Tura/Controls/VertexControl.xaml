<UserControl x:Class="Tura.Controls.VertexControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tura.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100" Width="100" Height="100" HorizontalAlignment="Left" VerticalAlignment="Top">
    <Grid>
        <Ellipse Width="100" Height="100" Stroke="Black" Fill="LightGray" StrokeThickness="2">
            <Ellipse.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Connect to"/>
                    <MenuItem Header="Delete"/>
                    <MenuItem Header="Rename"/>
                </ContextMenu>
            </Ellipse.ContextMenu>
        </Ellipse>
        
        <TextBlock Name="NameTextBlock" Text="V" VerticalAlignment="Center" Foreground="White" TextAlignment="Center" HorizontalAlignment="Center" FontSize="12" Width="100"/>
    </Grid>
</UserControl>
