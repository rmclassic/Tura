<Window x:Class="Tura.MachineEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tura"
        mc:Ignorable="d"
        Title="MachineEditWindow" Height="450" Width="800">
    <Grid>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open Machine"/>
                <MenuItem Header="_Close"/>
            </MenuItem>

            <MenuItem Header="_Graph">
                <MenuItem Header="Create">
                    <MenuItem Header="_New Vertex" Click="MenuItem_Click"/>
                </MenuItem>
            </MenuItem>
        </Menu>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Grid Name="GraphGrid" Background="White" Margin="0,20,0,20"/>
        </ScrollViewer>
    </Grid>
</Window>
