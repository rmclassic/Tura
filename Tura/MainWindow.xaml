<Window x:Class="Tura.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tura"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Menu DockPanel.Dock="Top" Panel.ZIndex="1">
            <MenuItem Header="_File">
                <MenuItem Header="_Open Project"/>
                <MenuItem Header="_Close Project"/>
            </MenuItem>

            <MenuItem Header="_Machine">
                <MenuItem Header="Create">
                    <MenuItem Header="DFA Machine" Click="MenuItem_Click"/>
                    <MenuItem Header="Turing Machine" Click="MenuItem_Click" Tag="CTM"/>
                </MenuItem>
            </MenuItem>
        </Menu>

        <Grid Name="MachinesGrid" Background="White" Margin="0,20,0,20" Panel.ZIndex="2"/>
    </Grid>
</Window>
