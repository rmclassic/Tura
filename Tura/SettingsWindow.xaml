<Window x:Class="Tura.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tura"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="500" Width="500">
    <Grid>
        <GroupBox Height="100" VerticalAlignment="Top" Margin="10,10,10,10" Header="Theme">
            <TextBlock VerticalAlignment="Top" Text="Choose how the program looks like:"/>
        </GroupBox>
        <RadioButton VerticalAlignment="Top" Name="DarkThemeRadioButton" Margin="20,65,0,0" Content="Dark" Width="75" HorizontalAlignment="Left" Checked="DarkThemeRadioButton_Checked"/>
        <RadioButton VerticalAlignment="Top" Name="LightThemeRadioButton" Margin="100,65,0,0" Content="Light" Width="80" HorizontalAlignment="Left" Checked="LightThemeRadioButton_Checked"/>
    </Grid>
</Window>
